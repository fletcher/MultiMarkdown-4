DocForTOC = BOM? a: StartList
		(&( (YAMLStart)? MetaDataKey Sp ':' Sp (!Newline)) z:MetaData { free_node_tree(z); } )?
		( TOCBlock { a = cons($$, a); } | TOCPlain)*
		BlankLine*
		{ ((parser_data *)G->data)->result = reverse_list(a); }

