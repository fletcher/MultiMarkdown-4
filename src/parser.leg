		g_string_append_c(original,'\n');
		g_string_append_c(original,'\n');

		/* Create a note reference */
		$$ = str(yytext);
		$$->key = NOTEREFERENCE;
		
		/* Include RAW version for parsing in case this is an inline footnote */
		node *raw = str(original->str);
		raw->key = RAW;
